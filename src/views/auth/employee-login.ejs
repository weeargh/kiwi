<%- include('../partials/header', { title: title }) %>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow mt-5">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <h2 class="mb-0 text-primary">Kiwi Equity</h2>
            <p class="text-muted">Employee Login</p>
          </div>
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form method="POST" action="/auth/employee/request-passcode" autocomplete="on">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" name="email" class="form-control" required autocomplete="email" value="<%= values.email || '' %>">
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">Send Passcode</button>
            </div>
          </form>
          <div class="mt-4 text-center">
            <a href="/auth/login">Admin? Log in here</a>
          </div>
        </div>
      </div>
      <div class="text-center mt-4">
        <a href="/auth/logout" class="btn btn-outline-secondary">Logout</a>
      </div>
    </div>
  </div>
</div> 