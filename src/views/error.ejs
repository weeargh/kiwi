<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body text-center">
          <h2 class="text-danger mt-3 mb-4">
            <i class="bi bi-exclamation-circle-fill"></i>
            Error
          </h2>
          <h3><%= message %></h3>
          <p class="text-muted">
            <%= error && error.status ? error.status : 'Unknown Error' %>
          </p>
          
          <% if (error && process.env.NODE_ENV !== 'production' && error.stack) { %>
            <div class="alert alert-danger text-start mt-4">
              <pre class="mb-0"><code><%= error.stack %></code></pre>
            </div>
          <% } %>
          
          <div class="mt-4">
            <a href="/" class="btn btn-primary">Go to Dashboard</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 